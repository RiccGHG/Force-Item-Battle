{
  "namespace": "hud",

  // Modification Actionbar Offset And Icon Timer

  "hud_title_text": {
    "type": "image",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": ["100%c + 12px", "100%c + 5px"],
    "offset": [0, 22],
    "texture": "textures/ui/hud_tip_text_background",
    "alpha": 0.5,
    "controls": [
      {
        "title_message": {
          "type": "label",
          "anchor_from": "center",
          "anchor_to": "center",
          "color": "$tool_tip_text",
          "layer": 31,
          "text": "$title_text",
          "localize": false,
          "alpha": 10,
        }
      }
    ]
  },
  "ainim_hud_title_text_alpha_out": {
    "anim_type": "alpha",
    "easing": "in_quart",
    "duration": 1,
    "from": 1,
    "to": 0
  }
}
