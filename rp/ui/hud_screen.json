{
  "namespace": "hud",

  "hud_title_text": {
    "type": "image",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": ["100%c + 12px", "100%c + 5px"],
    "offset": [0, 22],
    "texture": "textures/ui/hud_tip_text_background",
    "alpha": "@hud.anim_actionbar_text_background_alpha_out",
    "controls": [
      {
        "title_message": {
          "type": "label",
          "anchor_from": "center",
          "anchor_to": "center",
          "color": "white",
          "layer": 31,
          "text": "$title_text",
          "alpha": "@hud.anim_actionbar_text_alpha_out"
        }
      }
    ]
  },
  "logo_image": {
    "type": "image",
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "text": "textures/ui/pack_icon",
    "size": [
        100,
        100
    ],
    "bindings": [{
        "binding_type": "view",
        "source_property_name": "('hi' = 'hi')",
        "target_property_name": "#visible"
    }]
  },
  "logo_image_factory": {
        "type": "panel",
        "factory": {
            "name": "hud_title_text_factory",
            "control_ids": {
                "hud_title_text": "item_image@hud.item_image"
            }
        }
    },
    "item_image": {
        "type": "image",
        "size": [100, 100],
        "layer": 10,
        "anchor_from": "top_right",
        "anchor_to": "top_right",
        "bindings": [
            {
                "binding_name": "#hud_title_text_string"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not (#hud_title_text_string = 'Â§unoImg'))",
                "target_property_name": "#visible"
            },
            {
                "binding_name": "#hud_title_text_string"
            },
            {
                "binding_type": "global",
                "source_property_name": "#hud_title_text_string",
                "target_property_name": "#texture"
            }
        ]
    },

    "item_image_factory": {
        "type": "panel",
        "factory": {
            "name": "hud_title_text_factory",
            "control_ids": {
                "hud_title_text": "item_image@hud.item_image"
            }
        }
    },

    "root_panel": {
        "modifications": [
            {
                "array_name": "controls",
                "operation": "insert_front",
                "value": {
                    "item_image_factory@hud.item_image_factory": {},
                    "logo_image_factory@hud.logo_image_factory": {}
                }
            }
        ]
    }
}